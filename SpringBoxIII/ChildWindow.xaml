<Window x:Class="SpringBoxIII.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpringBoxIII"
        mc:Ignorable="d"
        Title="ChildWindow" 
        Height="1080" Width="1920"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Deactivated="Window_Deactivated"
        Loaded="Window_Loaded" ShowInTaskbar="False">
    <Window.DataContext>
        <local:ChildViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <!--定义移动动画-->
        <Storyboard x:Key="MoveAnimation">
            <DoubleAnimation
            Storyboard.TargetName="Img"
            Storyboard.TargetProperty="(Canvas.Left)"
            From="{Binding From.X}"
            To="{Binding To.X }"
            Duration="{Binding Duration}" />
            <DoubleAnimation
            Storyboard.TargetName="Img"
            Storyboard.TargetProperty="(Canvas.Top)"
            From="{Binding From.Y}"
            To="{Binding To.Y }"
            Duration="{Binding Duration}" />
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Canvas Name="Canvas" Panel.ZIndex="0">
            <Image Source="/Mouse.png" Name="Img" Height="110" Width="110" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="{Binding Angle}"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Canvas>
    </Grid>
</Window>
