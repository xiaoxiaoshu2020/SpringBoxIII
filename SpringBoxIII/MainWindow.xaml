<Window x:Class="SpringBoxIII.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpringBoxIII"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Deactivated="Window_Deactivated"
        Loaded="Window_Loaded" ShowInTaskbar="False">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!--定义移动动画-->
        <Storyboard x:Key="MoveAnimation">
            <DoubleAnimation
            Storyboard.TargetName="Img"
            Storyboard.TargetProperty="(Canvas.Left)"
            From="{Binding From.X}"
            To="{Binding To.X }"
            Duration="{Binding Duration}" />
            <DoubleAnimation
            Storyboard.TargetName="Img"
            Storyboard.TargetProperty="(Canvas.Top)"
            From="{Binding From.Y}"
            To="{Binding To.Y }"
            Duration="{Binding Duration}" />
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Grid Panel.ZIndex="1">
            <Grid.Clip>
                <CombinedGeometry GeometryCombineMode="Exclude">
                    <CombinedGeometry.Geometry1>
                        <RectangleGeometry Rect="0,0,2560,1440"/>
                    </CombinedGeometry.Geometry1>
                    <CombinedGeometry.Geometry2>
                        <EllipseGeometry Center="{Binding point}" RadiusX="40" RadiusY="40"/>
                    </CombinedGeometry.Geometry2>
                </CombinedGeometry>
            </Grid.Clip>
            <Border Background="Black" Opacity="0.5" x:Name="Mask"/>
        </Grid>
        <Canvas Name="Canvas" Panel.ZIndex="0">
            <Image Source="/XLPJ.png" Name="Img" Height="80" Width="80" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="{Binding Angle}"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Canvas>
    </Grid>

</Window>
